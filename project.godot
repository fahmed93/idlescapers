; Engine configuration file.
; It's best edited using the editor UI and not directly,
; format is similar to, but not the same as, parsing a .ini file.

config_version=5

[application]

config/name="IdleScapers"
config/description="An idle game inspired by Melvor Idle/RuneScape with skills (1-99), training methods, and offline progress."
run/main_scene="res://scenes/main.tscn"
config/features=PackedStringArray("4.2", "Mobile")
config/icon="res://icon.svg"

[autoload]

GameManager="*res://autoload/game_manager.gd"
Inventory="*res://autoload/inventory.gd"
SaveManager="*res://autoload/save_manager.gd"

[display]

window/size/viewport_width=720
window/size/viewport_height=1280
window/size/resizable=true
window/handheld/orientation=1
window/stretch/mode="canvas_items"
window/stretch/aspect="expand"

[input_devices]

pointing/emulate_touch_from_mouse=true

[rendering]

renderer/rendering_method="mobile"
textures/vram_compression/import_etc2_astc=true
